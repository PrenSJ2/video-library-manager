{
  "name": "videolib-fullstack",
  "version": "1.0.0",
  "private": true,
  "description": "A full-stack application to manage a video library with AI-powered idea generation.",
  "main": "dist/server/index.js",
  "scripts": {
    "start": "npm run build && node dist/server/index.js",
    "dev": "concurrently \"npm:dev:client\" \"npm:dev:server\"",
    "dev:client": "esbuild index.tsx --bundle --outfile=dist/client/bundle.js --jsx=automatic --watch",
    "dev:server": "nodemon",
    "build": "npm run build:client && npm run build:server",
    "build:client": "esbuild index.tsx --bundle --outfile=dist/client/bundle.js --jsx=automatic",
    "build:server": "tsc --project server/tsconfig.json",
    "test": "jest"
  },
  "dependencies": {
    "@google/genai": "^1.10.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.7.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.9",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/supertest": "^6.0.3",
    "concurrently": "^8.2.2",
    "esbuild": "^0.23.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "nodemon": "^3.1.4",
    "supertest": "^7.1.3",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.2"
  }
}
